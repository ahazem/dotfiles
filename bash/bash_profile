# bash_profile

declare -a files=(
  # $HOME/.rvm/scripts/rvm # Load RVM into a shell session *as a function*
  $HOME/.dotfiles/bash/bash_exports # Exports
  $HOME/.dotfiles/bash/bash_aliases # Aliases
  $HOME/.dotfiles/bash/bash_prompt # Prompt
  # $HOME/documents/dev/github.com/jdxcode/gh/bash/gh.bash # Use gh to move around github repos
  # $HOME/documents/dev/github.com/jdxcode/gh/completions/gh.bash
)

  #$HOME/.dotfiles/bash/bash_paths  # Path modifications

# If these files are readable, source them
for index in ${!files[*]}
do
  if [[ -r ${files[$index]} ]]; then
    source ${files[$index]}
  fi
done

unset files

# Use bash completion (install via homebrew)
[[ -r "/usr/local/etc/profile.d/bash_completion.sh" ]] && . "/usr/local/etc/profile.d/bash_completion.sh"

# Git completion
if [ -f ~/.git-completion.bash ]; then
  . ~/.git-completion.bash
fi

# tmux
[ -n "$TMUX" ] && export TERM=screen-256color

# Silence the deperacation warning for bash
export BASH_SILENCE_DEPRECATION_WARNING=1

# serverless + rust + sbin + go
# export PATH="$HOME/.serverless/bin:$HOME/.cargo/env:/usr/local/sbin:$PATH:$GOPATH/bin:$GOROOT/bin"

# serverless + rust + sbin
export PATH="$HOME/.serverless/bin:$HOME/.cargo/env:/usr/local/sbin:$PATH"

# Initialize nodenv
# eval "$(nodenv init -)"

# Initiaize rbenv
# eval "$(rbenv init -)"

# Always start ssh-agent
[ -z "$SSH_AUTH_SOCK" ] && eval "$(ssh-agent -s)"
