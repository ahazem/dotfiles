# bash_exports

# Load brew
export PATH="/opt/homebrew/bin:$PATH"

# Make vim the default editor.
export EDITOR="vim"

# Rails Assets
export DEV_ASSET_DEBUG="false"

# Python (Locale)
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# GH / GL
export GH_BASE_DIR="$HOME/dev"

# GPG
export GPG_TTY=$(tty)

# Starship
export STARSHIP_CONFIG="~/.starship.toml"

# Load mise, pg17
export PATH="$(mise where go):$(brew --prefix)/opt/postgresql@17/bin:$PATH"

# GO
export GOROOT="$(mise where go)"

# Adjust starship logging
export STARSHIP_LOG=error

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

# Silence the deprecation warning for bash
export BASH_SILENCE_DEPRECATION_WARNING=1
